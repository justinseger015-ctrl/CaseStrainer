# ===========================================================================
# CaseStrainer Environment Configuration
# Copy this file to .env and update the values as needed
# ===========================================================================

# Application Settings
# ---------------------------------------------------------------------------
FLASK_APP=app_final_vue.py
FLASK_ENV=development  # development, production
FLASK_DEBUG=1  # 1 for debug mode, 0 for production
SECRET_KEY=your-secret-key-change-this-in-production

# Server Configuration
# ---------------------------------------------------------------------------
SERVER_NAME=localhost
SERVER_PORT=5000
SERVER_HOST=0.0.0.0

# Database Configuration
# ---------------------------------------------------------------------------
# SQLite (Development)
DATABASE_FILE=casestrainer_dev.db
SQLALCHEMY_DATABASE_URI=sqlite:///${PWD}/instance/${DATABASE_FILE}

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/casestrainer_prod
# SQLALCHEMY_DATABASE_URI=${DATABASE_URL}

# File Uploads
# ---------------------------------------------------------------------------
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
ALLOWED_EXTENSIONS=pdf,doc,docx,txt

# Session Configuration
# ---------------------------------------------------------------------------
SESSION_TYPE=filesystem
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE='Lax'

# Email Configuration
# ---------------------------------------------------------------------------
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com
MAIL_DEBUG=0

# API Keys
# ---------------------------------------------------------------------------
COURTLISTENER_API_KEY=your-courtlistener-api-key
# Get your API key from https://www.courtlistener.com/api/rest-info/

# Rate Limiting
# ---------------------------------------------------------------------------
RATELIMIT_DEFAULT=100/hour  # Default rate limit for API endpoints
RATELIMIT_STORAGE_URL=memory://  # Use 'redis://' for production

# Logging
# ---------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/casestrainer.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Frontend Configuration
# ---------------------------------------------------------------------------
VITE_API_BASE_URL=/casestrainer/api
VITE_APP_ENV=development
VITE_APP_NAME=CaseStrainer

# Development Settings
# ---------------------------------------------------------------------------
# Set these in development only
DEBUG_TB_ENABLED=True
DEBUG_TB_INTERCEPT_REDIRECTS=False

# Production Settings
# ---------------------------------------------------------------------------
# Uncomment and configure for production
# PREFERRED_URL_SCHEME=https
# SESSION_COOKIE_SECURE=True
# REMEMBER_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE='Lax'
# PERMANENT_SESSION_LIFETIME=3600  # 1 hour

