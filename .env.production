# Production Environment
NODE_ENV=production
VITE_APP_ENV=production

# Production Server
PROD_FRONTEND_PORT=5000
PROD_BACKEND_PORT=5000

# API Configuration
VITE_API_BASE_URL=/casestrainer/api

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Database
DATABASE_URL=sqlite:///data/casestrainer.db

# Session Configuration
SESSION_TYPE=filesystem
SESSION_FILE_DIR=/tmp/flask-sessions

# Security
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGINS=https://wolf.law.uw.edu

# File Uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16MB max file size

# Cache Configuration
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATELIMIT_DEFAULT=200 per day
RATELIMIT_ANONYMOUS=50 per day
