# ===========================================================================
# CaseStrainer Environment Configuration
# Copy this file to .env and update the values as needed
# ===========================================================================

# Application Settings
# ---------------------------------------------------------------------------
FLASK_APP=app_final_vue.py
FLASK_ENV=development  # development, production
FLASK_DEBUG=1  # 1 for debug mode, 0 for production
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
# ---------------------------------------------------------------------------
# SQLite (Development)
DATABASE_FILE=casestrainer_dev.db
SQLALCHEMY_DATABASE_URI=sqlite:///${PWD}/instance/${DATABASE_FILE}

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/casestrainer_prod
# SQLALCHEMY_DATABASE_URI=${DATABASE_URL}

# File Uploads
# ---------------------------------------------------------------------------
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
ALLOWED_EXTENSIONS=pdf,doc,docx,txt

# Session Configuration
# ---------------------------------------------------------------------------
SESSION_TYPE=filesystem
SESSION_FILE_DIR=casestrainer_sessions
SESSION_COOKIE_PATH=/casestrainer/
SESSION_COOKIE_SECURE=True  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# External APIs
# ---------------------------------------------------------------------------
# CourtListener API (v4)
COURTLISTENER_API_KEY=your-courtlistener-api-key
COURTLISTENER_API_URL=https://www.courtlistener.com/api/rest/v4/opinions/

# LangSearch API (if used)
LANGSEARCH_API_KEY=your-langsearch-api-key

# Email Configuration
# ---------------------------------------------------------------------------
# Development (MailHog)
# MAIL_SERVER=localhost
# MAIL_PORT=1025
# MAIL_USE_TLS=False
# MAIL_USE_SSL=False
# MAIL_DEBUG=1
# MAIL_DEFAULT_SENDER=development@example.com

# Production (UW SMTP)
MAIL_SERVER=smtp.uw.edu
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-netid  # Just the NetID, not full email
MAIL_PASSWORD=your-netid-password  # Your UW NetID password or app password
MAIL_DEFAULT_SENDER=your-netid@uw.edu
MAIL_RECIPIENT=feedback-recipient@uw.edu
MAIL_DEBUG=0  # Set to 1 for debug output, 0 for production

# Monitoring & Error Tracking
# ---------------------------------------------------------------------------
# Sentry DSN (uncomment and configure for production)
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Feature Flags
# ---------------------------------------------------------------------------
ENABLE_MAINTENANCE_MODE=False

# Security
# ---------------------------------------------------------------------------
# Set these in production environment, not in version control
# SECURITY_PASSWORD_SALT=change-this-in-production
# SECURITY_CONFIRM_EMAIL=False
# SECURITY_RECOVERABLE=True
# SECURITY_TRACKABLE=True
# SECURITY_CHANGEABLE=True

# CORS Configuration (for API access)
# ---------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Redis (for caching and rate limiting in production)
# ---------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0

# AWS S3 (for file storage in production)
# ---------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION=us-west-2

# Rate Limiting
# ---------------------------------------------------------------------------
RATELIMIT_DEFAULT=200 per day;50 per hour;10 per minute

# Logging
# ---------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
