FROM node:18-alpine

WORKDIR /app

# Install curl for health checks and nginx
RUN apk add --no-cache curl nginx

# Install dependencies
COPY package*.json ./
RUN npm install

# Set environment variables for local development build BEFORE copying source
ENV VITE_APP_ENV=development
# Use relative API base for built assets so it works behind any domain/base path
ENV VITE_API_BASE_URL=/casestrainer/api
ENV VITE_APP_PROTOCOL=http
ENV NODE_ENV=development

# Copy source code
COPY . .

# Build the application during image creation
RUN npm run build

# Copy built assets to nginx directory
RUN mkdir -p /usr/share/nginx/html/casestrainer && \
    cp -r dist/* /usr/share/nginx/html/casestrainer/

# Copy nginx configuration
COPY nginx.conf /etc/nginx/http.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"] 